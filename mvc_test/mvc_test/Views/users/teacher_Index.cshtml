@model mvc_test.Models.teacher

@{
    ViewData["Title"] = "教师信息修改";
}

<h1>教师信息修改</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="teacher_Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">编号</label>
                <input asp-for="num" class="form-control" />
                <span asp-validation-for="num" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ID</label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">姓名</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">性别</label>
                <input asp-for="gender" class="form-control" />
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">电话</label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">学院</label>
                <input asp-for="dept" class="form-control" />
                <span asp-validation-for="dept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="完成" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>

